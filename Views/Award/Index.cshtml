<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/LaLlamaDelBosque.styles.css" asp-append-version="true" />

@model IEnumerable<Award>

@using System.Web;
@using Microsoft.AspNetCore.Mvc;

@{
    ViewData["Title"] = "Premios";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<div class="btn-group mx-auto" role="group">
    <!-- Add -->
    <button type="button" class="btn"
            onclick="location.href='@Url.Action("Create", "Award")'">
        <span class="material-icons icon icon-primary">add_circle</span>
    </button>
    <!-- Setting -->
    <button type="button" class="btn"
            onclick="location.href='@Url.Action("Setting", "Award")'">
        <span class="material-icons icon icon-success">settings</span>
    </button>
</div>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-xl-10">
            <div class="accordion" id="accordionFlushExample">
                @foreach (var item in Model)
                {
                    <div class="accordion-item p-1 mb-2">
                        @if (item.Id != (int?)TempData["Id"])
                        {
                            <h2 class="accordion-header" id="flush-headingOne">
                                <button class="accordion-button collapsed p-2" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@item.Id" aria-expanded="false" aria-controls="flush-collapse-@item.Id" on>
                                    <div class="d-flex align-items-start">
                                        <span class="material-icons star">
                                            workspace_premium
                                        </span>
                                    </div>
                                    <div class="d-flex align-items-start flex-column">
                                        <div class="p-1">
                                            <b style="font-size: 24px">@item.Date.ToLongDateString()</b>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="flush-collapse-@item.Id" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th colspan="2">
                                                    <!-- PDF -->
                                                    <button type="button" class="btn"
                                                        onclick="location.href='@Url.Action("DetailsPdf", "Award")'">
                                                        <span class="material-icons icon icon-success">article</span>
                                                    </button>
                                                    <!-- Delete -->
                                                    <button type="button" class="btn"
                                                        onclick="location.href='@Url.Action("Delete", "Award", new {Id= item.Id})'">
                                                        <span class="material-icons icon icon-danger">delete</span>
                                                    </button>
                                                </th>
                                            </tr>
                                        </thead>
                                    </table>
                                    <table class="table">
                                        <thead>  
                                            <tr>
                                                <th>Id</th>
                                                <th>Descripción</th>
                                                <th>Número</th>
                                                <th>Reventado</th>
                                                <th>Monto</th>
                                                <th>Premio</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var line in item.AwardLines)
                                            {
                                                <tr>
                                                    <td>@line.Order</td>
                                                    <td>@line.Description</td>
                                                    <td>@line.Number</td>
                                                    <td>@line.Busted</td>
                                                    <td>₡ @line.Amount</td>
                                                    <td class="table-active">₡ @line.Award</td>
                                                    <td style="text-align:center">
                                                        <div class="btn-group mx-auto" role="group">
                                                            <!-- Edit -->
                                                            <button type="button" class="btn" onclick="location.href='@Url.Action("Edit", "Award", new {AwardId= item.Id, LineId= line.Order})'">
                                                                <span class="material-icons icon icon-dark">mode_edit</span>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                        else
                        {
                            <h2 class="accordion-header" id="flush-headingOne">
                                <button class="accordion-button collapsed p-2" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@item.Id" aria-expanded="false" aria-controls="flush-collapse-@item.Id" on>
                                    <div class="d-flex align-items-start">
                                        <span class="material-icons star">
                                            workspace_premium
                                        </span>
                                    </div>
                                    <div class="d-flex align-items-start flex-column">
                                        <div class="p-1">
                                            <b style="font-size: 24px">@item.Date.ToLongDateString()</b>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="flush-collapse-@item.Id" class="accordion-collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th colspan="2">
                                                    <!-- PDF -->
                                                    <button type="button" class="btn"
                                                    onclick="location.href='@Url.Action("DetailsPdf", "Award", new {Id= item.Id})'">
                                                        <span class="material-icons icon icon-success">article</span>
                                                    </button>
                                                    <!-- Delete -->
                                                    <button type="button" class="btn"
                                                    onclick="location.href='@Url.Action("Delete", "Award", new {Id= item.Id})'">
                                                        <span class="material-icons icon icon-danger">delete</span>
                                                    </button>
                                                </th>
                                                <th>
                                                    @if(Model.Any() && TempData["Method"] is not null && Model.FirstOrDefault(x => x.Id == (int?)TempData["Id"]) is not null)
                                                    {
                                                        @switch(TempData["Method"])
                                                        {
                                                            case "Delete":
                                                                <partial name="_Delete" model="item"></partial>
                                                                break;
                                                        }
                                                    }
                                                </th>
                                            </tr>
                                        </thead>
                                    </table>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Descripción</th>
                                                <th>Número</th>
                                                <th>Reventado</th>
                                                <th>Monto</th>
                                                <th>Premio</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var line in item.AwardLines)
                                            {
                                                @if ((int?)TempData["Id"] == item.Id && (int?)TempData["LineId"] == line.Order && TempData["Method"]?.ToString() == "Edit")
                                                {
                                                    <partial name="_Edit" model="line" />
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td>@line.Order</td>
                                                        <td>@line.Description</td>
                                                        <td>@line.Number</td>
                                                        <td>@line.Busted</td>
                                                        <td>₡ @line.Amount</td>
                                                        <td class="table-active">₡ @line.Award</td>
                                                        <td style="text-align:center">
                                                            <div class="btn-group mx-auto" role="group">
                                                                <!-- Edit -->
                                                                <button type="button" class="btn" onclick="location.href='@Url.Action("Edit", "Award", new {AwardId= item.Id, LineId= line.Order})'">
                                                                    <span class="material-icons icon icon-dark">mode_edit</span>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        function scrollToItem(id) {
            const element = document.getElementById('flush-collapse-'.concat(id));
            element.scrollIntoView();
        }
    </script>
}