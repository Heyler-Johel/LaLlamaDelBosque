@model LaLlamaDelBosque.Models.Client

@{
    ViewData["Title"] = "Crear Cliente";
}

<h1 class="display-6">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teléfono</label>
                <input asp-for="Phone" class="form-control" placeholder="50688888888" value="506" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Límite</label>
                <input asp-for="Limit" class="form-control" />
                <span asp-validation-for="Limit" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary"/>
                &nbsp;&nbsp;&nbsp;
                <a asp-action="Index" style="color: var(--dark);">Volver</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}