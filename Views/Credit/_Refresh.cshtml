@model LaLlamaDelBosque.Models.CreditConnectionModel
@{
    var searchString = ViewBag.searchString;
    var currentPage = ViewBag.currentPage;
}

<form asp-action="Refresh" asp-route-clientid=@Model.ClientId class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-1">
        <input asp-for="CreditLine.Id" class="form-control" readonly />
        <input type="hidden" name="searchString" value="@searchString" />
        <input type="hidden" name="currentPage" value="@currentPage" />
    </div>
    <div class="form-group col-auto">
        <input asp-for="CreditLine.CreatedDate" class="form-control" readonly />
    </div>
    <div class="form-group col-auto">
        <input asp-for="CreditLine.Description" class="form-control" />
        <span asp-validation-for="CreditLine.Description" class="text-danger"></span>
    </div>
    <div class="form-group col-auto">
        <input asp-for="CreditLine.Amount" class="form-control" />
        <span asp-validation-for="CreditLine.Amount" class="text-danger"></span>
    </div>
    <div class="form-group col-auto">
        <input type="submit" value="Guardar" class="btn btn-primary"/>
        <input type="button" onclick="location.href='@Url.Action("Index", "Credit")'" value="Cancelar" class="btn btn-secondary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
